# this target needed for distribution only
noinst_HEADERS =	\
	$(WIRESHARK_COMMON_INCLUDES) \
	$(SHARK_COMMON_CAPTURE_INCLUDES) \
	$(wireshark_INCLUDES) \
	$(dumpcap_INCLUDES)
