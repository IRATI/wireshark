# tshark specifics
tshark_SOURCES =	\
	$(WIRESHARK_COMMON_SRC)	\
	$(SHARK_COMMON_CAPTURE_SRC) \
	capture_opts.c		\
	tempfile.c		\
	tshark.c

# rawshark specifics
rawshark_SOURCES =	\
	$(WIRESHARK_COMMON_SRC)	\
